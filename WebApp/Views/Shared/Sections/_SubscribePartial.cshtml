            {
                foreach (var item in Model.Subscribe)
                {
                    <input type="checkbox" />
                    <div>@item.Text</div>
                }
            } *@
            <button id="form-submit" class="btn-theme" type="submit">Subscribe *</button>
            </form>
        </div>

    </div>
</section>